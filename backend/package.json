{
  "name": "anki-tiny-backend",
  "version": "0.1.0",
  "description": "Backend for Anki Tiny",
  "author": "Morozhnikova Larisa",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/server.ts",
    "electron:dev": "cross-env NODE_ENV=development tsc && electron .",
    "dev": "concurrently \"npm run dev --prefix ../frontend\" \"cross-env NODE_ENV=development tsc && electron .\" -n \"frontend,backend\" -c \"blue,green\"",
    "test": "vitest",
    "build": "tsc",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && node build-installer.js",
    "bundle": "cd ../frontend && npm run build && cd ../backend && npm run build && node build-installer.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "structure": "node utils/run-tree.js > STRUCTURE.md"
  },
  "build": {
    "appId": "com.videoviewer.app",
    "productName": "AnkiTiny",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*",
      "../frontend/dist/**/*",
      "../frontend/public/app_icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/app_icon.png"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "kysely": "^0.27.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/natural": "^5.1.5",
    "@types/node": "^25.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tree-cli": "^0.6.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
