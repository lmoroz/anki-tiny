{
  "name": "repetitio",
  "version": "0.6.0",
  "description": "Repetitio - Desktop application for spaced repetition learning",
  "author": "Morozhnikova Larisa",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "app:dev": "npm run app:dev --workspace=backend",
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\" -n \"frontend,backend\" -c \"blue,green\"",
    "bundle": "npm run build --workspace=frontend && npm run build --workspace=backend && cd backend && node build-installer.js",
    "lint": "npm run lint --workspaces --if-present && npm run lint:md",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format": "npm run format --workspaces --if-present && npm run format:md",
    "format:md": "prettier --write \"./**/*.md\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx,vue}": [
      "npm run lint --workspace=frontend"
    ],
    "backend/**/*.{js,ts}": [
      "npm run lint --workspace=backend"
    ],
    "**/*.{json,css,scss}": [
      "prettier --write"
    ],
    "**/*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
